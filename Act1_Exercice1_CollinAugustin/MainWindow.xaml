<Window x:Class="Act1_Exercice1_CollinAugustin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Act1_Exercice1_CollinAugustin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition  Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Content="bouton1" Height="100"/>
            <Button Content="bouton2" Height="100"/>
        </StackPanel>
        <DockPanel Grid.Column="1">
            <Button DockPanel.Dock="Top" Content="top" Height="50" VerticalAlignment="Top"/>
            <Button DockPanel.Dock="Bottom" Content="bottom" Height="50" VerticalAlignment="Bottom"/>
            <Button DockPanel.Dock="Left" Content="left" Width="20" HorizontalAlignment="left"/>
            <Button DockPanel.Dock="right" Content="right" Width="30" HorizontalAlignment="right"/>
            <Button Content="direction"/>
        </DockPanel>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="bouton1" Width="100"/>
            <Button Content="bouton2" Width="100"/>
            <Button Content="bouton3" Width="100"/>
            <Button Content="bouton4" Width="100" Height="80"/>
            <Button Content="bouton5" Width="100"/>
            <Button Content="bouton6" Width="100"/>
        </WrapPanel>
        <Canvas Grid.Column="1" Grid.Row="1">
            <Ellipse Fill="Black" Height="150" Canvas.Left="75" Canvas.Top="25" Width="150"/>
            <Ellipse Fill="Yellow" Height="115" Canvas.Left="92.5" Canvas.Top="40" Width="115"/>
            <Ellipse Fill="red" Height="80" Canvas.Left="110" Canvas.Top="55" Width="80"/>

        </Canvas>
    </Grid>
</Window>
