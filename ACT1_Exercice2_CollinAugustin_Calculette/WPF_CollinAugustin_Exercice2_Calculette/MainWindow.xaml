<Window x:Class="WPF_CollinAugustin_Exercice2_Calculette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CollinAugustin_Exercice2_Calculette"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="390" Background="Gray">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.ColumnSpan="3" Background="White" Margin="10,10,10,10"/>
        <Button Content="c" Grid.Column="3" FontSize="50" Margin="20,25,20,25" Background="red"/>
        
            <Button Content="1" Grid.Row="1" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="4" Grid.Row="2" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="7" Grid.Row="3" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="," Grid.Row="4" FontSize="50" Margin="20,25,20,25" Background="LightBlue"/>
        
            <Button Content="2" Grid.Row="1" Grid.Column="1" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="8" Grid.Row="3" Grid.Column="1" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
        
            <Button Content="3" Grid.Row="1" Grid.Column="2" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="9" Grid.Row="3" Grid.Column="2" FontSize="50" Margin="20,25,20,25" Background="DarkCyan"/>
            <Button Content="*" Grid.Row="4" Grid.Column="2" FontSize="50" Margin="20,25,20,25" Background="Green"/>
        
            <Button Content="+" Grid.Row="1" Grid.Column="3" FontSize="50" Margin="20,25,20,25" Background="Green"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" FontSize="50" Margin="20,25,20,25" Background="Green"/>
            <Button Content="/" Grid.Row="3" Grid.Column="3" FontSize="50" Margin="20,25,20,25" Background="Green"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" FontSize="50" Margin="20,25,20,25" Background="Yellow"/>
    </Grid>
</Window>
